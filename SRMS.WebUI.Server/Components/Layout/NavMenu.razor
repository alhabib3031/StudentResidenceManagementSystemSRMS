            </AuthorizeView>

            <!-- Manager Menu -->
            <AuthorizeView Roles="Manager,Admin,SuperRoot">
                <MudNavGroup Title='@(L["Management"])' Icon="@Icons.Material.Filled.ManageAccounts"
