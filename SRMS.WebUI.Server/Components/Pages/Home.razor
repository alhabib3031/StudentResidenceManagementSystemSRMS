@page "/"
@rendermode InteractiveServer
@using SRMS.WebUI.Server.Resources
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<Resource> L

<PageTitle>@L["Home_Title"] - SRMS</PageTitle>

<!-- Hero Section -->
<MudPaper class="pa-6 modern-card">
    <MudContainer MaxWidth="MaxWidth.ExtraLarge">
        <MudStack Spacing="8" AlignItems="AlignItems.Center" Class="text-center animate-float glass-card">

            <!-- Logo Icon -->
            <MudPaper Elevation="0"
                Style="width: 120px; height: 120px; background: linear-gradient(135deg, var(--mud-palette-primary) 0%, #7c3aed 100%); border-radius: 30px; display: flex; align-items: center; justify-content: center; box-shadow: var(--shadow-glow); animation: float 3s ease-in-out infinite;">
                <MudIcon Icon="@Icons.Material.Filled.School" Color="Color.Surface" Style="font-size: 70px;" />
            </MudPaper>

            <!-- Title -->
            <MudStack Spacing="4" AlignItems="AlignItems.Center">
                <MudText Typo="Typo.h2"
                    Style="font-weight: 800; font-size: 3.5rem; background: linear-gradient(135deg, var(--mud-palette-primary) 0%, var(--mud-palette-secondary) 100%); -webkit-background-clip: text; -webkit-text-fill-color: transparent;">
                    @L["Home_Title"]
                </MudText>

                <MudText Typo="Typo.h5" Color="Color.Secondary" Style="max-width: 700px;">
                    @L["Home_Subtitle"]
                </MudText>

                <MudText Typo="Typo.body1" Color="Color.Secondary" Style="max-width: 600px; line-height: 1.8;">
                    @L["Home_Lead"]
                </MudText>
            </MudStack>

            <!-- Action Buttons -->
            <MudStack Row="true" Spacing="4" Justify="Justify.Center">
                <MudButton Variant="Variant.Filled" Color="Color.Primary" Size="Size.Large" Href="/register"
                    StartIcon="@Icons.Material.Filled.Rocket"
                    Style="padding: 16px 40px; font-size: 1.1rem; border-radius: 12px;"
                    Class="animate-float animate-pulse animate-bounce">
                    @L["GetStartedFree"]
                </MudButton>
                <MudButton Variant="Variant.Outlined" Color="Color.Primary" Size="Size.Large" Href="/about"
                    StartIcon="@Icons.Material.Filled.Info"
                    Style="padding: 16px 40px; font-size: 1.1rem; border-radius: 12px;"
                    Class="animate-float animate-pulse animate-bounce">
                    @L["LearnMore"]
                </MudButton>
            </MudStack>
        </MudStack>

        <!-- Features Section -->
        <MudStack Spacing="6" Class="mt-8">
            <MudText Typo="Typo.h4" Align="Align.Center" Class="font-bold">
                @L["Features_Header"]
            </MudText>

            <MudGrid Spacing="4">
                <!-- Feature Card 1 -->
                <MudItem xs="12" sm="6" md="4">
                    <MudPaper Elevation="2" Class="pa-6 h-100 animate-float glass-card"
                        Style="border-radius: 16px; transition: all 0.3s ease;">
                        <MudStack Spacing="3" AlignItems="AlignItems.Center" Class="text-center">
                            <MudAvatar Size="Size.Large"
                                Style="width: 80px; height: 80px; background: linear-gradient(135deg, var(--mud-palette-primary) 0%, #7c3aed 100%); border-radius: 20px; box-shadow: 0 0 20px rgba(139, 92, 246, 0.3);">
                                <MudIcon Icon="@Icons.Material.Filled.Apartment" Color="Color.Surface"
                                    Size="Size.Large" />
                            </MudAvatar>
                            <MudText Typo="Typo.h6" Class="font-bold">@L["Feature_ResidenceManagement_Title"]</MudText>
                            <MudText Typo="Typo.body2" Color="Color.Secondary">
                                @L["Feature_ResidenceManagement_Desc"]
                            </MudText>
                        </MudStack>
                    </MudPaper>
                </MudItem>

                <!-- Feature Card 2 -->
                <MudItem xs="12" sm="6" md="4">
                    <MudPaper Elevation="2" Class="pa-6 h-100 animate-float glass-card"
                        Style="border-radius: 16px; transition: all 0.3s ease;">
                        <MudStack Spacing="3" AlignItems="AlignItems.Center" Class="text-center">
                            <MudAvatar Size="Size.Large" Color="Color.Success"
                                Style="width: 80px; height: 80px; border-radius: 20px; box-shadow: 0 0 20px rgba(16, 185, 129, 0.3);">
                                <MudIcon Icon="@Icons.Material.Filled.People" Color="Color.Surface" Size="Size.Large" />
                            </MudAvatar>
                            <MudText Typo="Typo.h6" Class="font-bold">@L["Feature_StudentPortal_Title"]</MudText>
                            <MudText Typo="Typo.body2" Color="Color.Secondary">
                                @L["Feature_StudentPortal_Desc"]
                            </MudText>
                        </MudStack>
                    </MudPaper>
                </MudItem>

                <!-- Feature Card 2 -->
                <MudItem xs="12" sm="6" md="4">
                    <MudPaper Elevation="2" Class="pa-6 h-100 animate-float glass-card"
                              Style="border-radius: 16px; transition: all 0.3s ease;">
                        <MudStack Spacing="3" AlignItems="AlignItems.Center" Class="text-center">
                            <MudAvatar Size="Size.Large" Color="Color.Success"
                                       Style="width: 80px; height: 80px; border-radius: 20px; box-shadow: 0 0 20px rgba(16, 185, 129, 0.3);">
                                <MudIcon Icon="@Icons.Material.Filled.People" Color="Color.Surface" Size="Size.Large" />
                            </MudAvatar>
                            <MudText Typo="Typo.h6" Class="font-bold">@L["Feature_StudentPortal_Title"]</MudText>
                            <MudText Typo="Typo.body2" Color="Color.Secondary">
                                @L["Feature_StudentPortal_Desc"]
                            </MudText>
                        </MudStack>
                    </MudPaper>
                </MudItem>

                <!-- Feature Card 3 -->
                <MudItem xs="12" sm="6" md="4">
                    <MudPaper Elevation="2" Class="pa-6 h-100 animate-float glass-card"
                              Style="border-radius: 16px; transition: all 0.3s ease;">
                        <MudStack Spacing="3" AlignItems="AlignItems.Center" Class="text-center">
                            <MudAvatar Size="Size.Large" Color="Color.Info"
                                       Style="width: 80px; height: 80px; border-radius: 20px;">
                                <MudIcon Icon="@Icons.Material.Filled.Payment" Color="Color.Surface"
                                         Size="Size.Large" />
                            </MudAvatar>
                            <MudText Typo="Typo.h6" Class="font-bold">@L["Feature_PaymentProcessing_Title"]</MudText>
                            <MudText Typo="Typo.body2" Color="Color.Secondary">
                                @L["Feature_PaymentProcessing_Desc"]
                            </MudText>
                        </MudStack>
                    </MudPaper>
                </MudItem>

                <!-- Feature Card 4 -->
                <MudItem xs="12" sm="6" md="4">
                    <MudPaper Elevation="2" Class="pa-6 h-100 animate-float glass-card"
                              Style="border-radius: 16px; transition: all 0.3s ease;">
                        <MudStack Spacing="3" AlignItems="AlignItems.Center" Class="text-center">
                            <MudAvatar Size="Size.Large" Color="Color.Warning"
                                       Style="width: 80px; height: 80px; border-radius: 20px;">
                                <MudIcon Icon="@Icons.Material.Filled.Report" Color="Color.Surface" Size="Size.Large" />
                            </MudAvatar>
                            <MudText Typo="Typo.h6" Class="font-bold">@L["Feature_ComplaintManagement_Title"]</MudText>
                            <MudText Typo="Typo.body2" Color="Color.Secondary">
                                @L["Feature_ComplaintManagement_Desc"]
                            </MudText>
                        </MudStack>
                    </MudPaper>
                </MudItem>

                <!-- Feature Card 5 -->
                <MudItem xs="12" sm="6" md="4">
                    <MudPaper Elevation="2" Class="pa-6 h-100 animate-float glass-card"
                              Style="border-radius: 16px; transition: all 0.3s ease;">
                        <MudStack Spacing="3" AlignItems="AlignItems.Center" Class="text-center">
                            <MudAvatar Size="Size.Large" Color="Color.Error"
                                       Style="width: 80px; height: 80px; border-radius: 20px; box-shadow: 0 0 20px rgba(239, 68, 68, 0.3);">
                                <MudIcon Icon="@Icons.Material.Filled.Analytics" Color="Color.Surface"
                                         Size="Size.Large" />
                            </MudAvatar>
                            <MudText Typo="Typo.h6" Class="font-bold">@L["Feature_Analytics_Title"]</MudText>
                            <MudText Typo="Typo.body2" Color="Color.Secondary">
                                @L["Feature_Analytics_Desc"]
                            </MudText>
                        </MudStack>
                    </MudPaper>
                </MudItem>

                <!-- Feature Card 6 -->
                <MudItem xs="12" sm="6" md="4">
                    <MudPaper Elevation="2" Class="pa-6 h-100 animate-float glass-card"
                              Style="border-radius: 16px; transition: all 0.3s ease;">
                        <MudStack Spacing="3" AlignItems="AlignItems.Center" Class="text-center">
                            <MudAvatar Size="Size.Large" Color="Color.Secondary"
                                       Style="width: 80px; height: 80px; border-radius: 20px;">
                                <MudIcon Icon="@Icons.Material.Filled.Security" Color="Color.Surface"
                                         Size="Size.Large" />
                            </MudAvatar>
                            <MudText Typo="Typo.h6" Class="font-bold">@L["Feature_Security_Title"]</MudText>
                            <MudText Typo="Typo.body2" Color="Color.Secondary">
                                @L["Feature_Security_Desc"]
                            </MudText>
                        </MudStack>
                    </MudPaper>
                </MudItem>
            </MudGrid>
        </MudStack>

        <!-- Statistics Section -->
        <MudPaper Elevation="0" Class="glass-card pa-8 mt-8" Style="border-radius: 16px;">
            <MudStack Spacing="6">
                <MudText Typo="Typo.h4" Align="Align.Center" Class="font-bold">
                    @L["Stats_Header"]
                </MudText>

                <MudGrid Spacing="4">
                    <MudItem xs="6" md="3">
                        <MudStack Spacing="2" AlignItems="AlignItems.Center">
                            <MudText Typo="Typo.h2" Class="text-gradient"
                                     Style="font-weight: 800; background: linear-gradient(135deg, var(--mud-palette-primary) 0%, var(--mud-palette-secondary) 100%); -webkit-background-clip: text; -webkit-text-fill-color: transparent;">
                                10K+
                            </MudText>
                            <MudText Typo="Typo.body1" Color="Color.Secondary">@L["Stats_ActiveStudents"]</MudText>
                        </MudStack>
                    </MudItem>

                    <MudItem xs="6" md="3">
                        <MudStack Spacing="2" AlignItems="AlignItems.Center">
                            <MudText Typo="Typo.h2" Class="text-gradient"
                                     Style="font-weight: 800; background: linear-gradient(135deg, var(--mud-palette-primary) 0%, var(--mud-palette-secondary) 100%); -webkit-background-clip: text; -webkit-text-fill-color: transparent;">
                                50+
                            </MudText>
                            <MudText Typo="Typo.body1" Color="Color.Secondary">@L["Stats_Residences"]</MudText>
                        </MudStack>
                    </MudItem>

                    <MudItem xs="6" md="3">
                        <MudStack Spacing="2" AlignItems="AlignItems.Center">
                            <MudText Typo="Typo.h2" Class="text-gradient"
                                     Style="font-weight: 800; background: linear-gradient(135deg, var(--mud-palette-primary) 0%, var(--mud-palette-secondary) 100%); -webkit-background-clip: text; -webkit-text-fill-color: transparent;">
                                99.9%
                            </MudText>
                            <MudText Typo="Typo.body1" Color="Color.Secondary">@L["Stats_Uptime"]</MudText>
                        </MudStack>
                    </MudItem>

                    <MudItem xs="6" md="3">
                        <MudStack Spacing="2" AlignItems="AlignItems.Center">
                            <MudText Typo="Typo.h2" Class="text-gradient"
                                     Style="font-weight: 800; background: linear-gradient(135deg, var(--mud-palette-primary) 0%, var(--mud-palette-secondary) 100%); -webkit-background-clip: text; -webkit-text-fill-color: transparent;">
                                24/7
                            </MudText>
                            <MudText Typo="Typo.body1" Color="Color.Secondary">@L["Stats_Support"]</MudText>
                        </MudStack>
                    </MudItem>
                </MudGrid>
            </MudStack>
        </MudPaper>

        <!-- Call to Action -->
        <MudPaper Elevation="0" Class="glass-card pa-8 mt-8 text-center" Style="border-radius: 16px;">
            <MudStack Spacing="6" AlignItems="AlignItems.Center">
                <MudText Typo="Typo.h3" Class="font-bold">
                    @L["CTA_Header"]
                </MudText>

                <MudText Typo="Typo.body1" Color="Color.Secondary" Style="max-width: 600px;">
                    @L["CTA_Body"]
                </MudText>

                <MudStack Row="true" Spacing="3" Justify="Justify.Center">
                    <MudButton Variant="Variant.Filled" Color="Color.Primary" Size="Size.Large" Href="/register"
                               StartIcon="@Icons.Material.Filled.PersonAdd" Style="border-radius: 12px;">
                        @L["SignUpNow"]
                    </MudButton>
                    <MudButton Variant="Variant.Outlined" Color="Color.Primary" Size="Size.Large" Href="/contact"
                               StartIcon="@Icons.Material.Filled.ContactMail" Style="border-radius: 12px;">
                        @L["ContactSales"]
                    </MudButton>
                </MudStack>
            </MudStack>
        </MudPaper>
    </MudContainer>
</MudPaper>

<style>
    /* Keep animation styles */
    @@keyframes float {
        0%, 100% {
            transform: translateY(0px);
        }
        50% {
            transform: translateY(-10px);
        }
    }

    .animate-fade-in {
        animation: fadeIn 0.5s ease-out forwards;
    }

    @@keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    /* Hover effects for feature cards */
    .mud-paper:hover {
        transform: translateY(-4px);
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.15) !important;
    }
</style>