@using Microsoft.Extensions.Localization
@inject IStringLocalizer<Resource> L
@* Components/Dialogs/ResolveComplaintDialog.razor *@

<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6" Color="Color.Success">
            <MudIcon Icon="@Icons.Material.Filled.CheckCircle" Class="mr-2" />
            @L["ResolveComplaintDialog_Title"]
        </MudText>
    </TitleContent>

    <DialogContent>
        <MudStack Spacing="3">
            <MudAlert Severity="Severity.Info" Dense="false">
                @L["ResolveComplaintDialog_Description"]
            </MudAlert>

            <MudTextField @bind-Value="_resolutionNotes" Label='@L["ResolveComplaintDialog_Label_ResolutionNotes"]' Variant="Variant.Outlined"
                Placeholder='@L["ResolveComplaintDialog_Placeholder_ResolutionNotes"]' Lines="4" Required="true"
                RequiredError='@L["ResolveComplaintDialog_Error_ResolutionNotesRequired"]' Counter="500" MaxLength="500" />
        </MudStack>
    </DialogContent>

    <DialogActions>
        <MudButton OnClick="@Cancel" Variant="Variant.Text">
            @L["ResolveComplaintDialog_Button_Cancel"]
        </MudButton>
        <MudButton Color="Color.Success" Variant="Variant.Filled" OnClick="@Submit"
            Disabled="@(string.IsNullOrWhiteSpace(_resolutionNotes))" StartIcon="@Icons.Material.Filled.CheckCircle">
            @L["ResolveComplaintDialog_Button_MarkAsResolved"]
        </MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter]
    IMudDialogInstance MudDialog { get; set; } = null!;

    private string _resolutionNotes = "";

    private void Submit()
    {
        if (!string.IsNullOrWhiteSpace(_resolutionNotes))
        {
            MudDialog.Close(DialogResult.Ok(_resolutionNotes));
        }
    }

    private void Cancel()
    {
        MudDialog.Cancel();
    }
}
