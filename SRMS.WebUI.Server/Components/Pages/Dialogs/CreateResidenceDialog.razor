@using SRMS.Domain.Residences
@using SRMS.Domain.ValueObjects
@using SRMS.Domain.Repositories
@using Microsoft.Extensions.DependencyInjection
@using Microsoft.Extensions.Localization
@using SRMS.WebUI.Server.Resources
@using MudBlazor
@inject ISnackbar Snackbar
@inject IServiceScopeFactory ScopeFactory
@inject IStringLocalizer<Resource> L

<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Filled.AddBusiness" Class="mr-2" />
            @L["CreateResidenceDialog_Title"]
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudForm @ref="_form" @bind-IsValid="_success">
            <MudGrid>
                <MudItem xs="12">
                    <MudTextField @bind-Value="_residence.Name" Label='@L["CreateResidenceDialog_Name"]' Required="true"
                        RequiredError='@L["CreateResidenceDialog_Name_Required"]' Variant="Variant.Outlined" />
                </MudItem>
                <MudItem xs="12">
                    <MudTextField @bind-Value="_description" Label='@L["CreateResidenceDialog_Description"]' Variant="Variant.Outlined" Lines="3" />
                </MudItem>

                <MudItem xs="12">
                    <MudText Typo="Typo.subtitle2" Class="mb-2">@L["CreateResidenceDialog_Address"]</MudText>
                </MudItem>
                <MudItem xs="6">
                    <MudTextField @bind-Value="_street" Label='@L["CreateResidenceDialog_Street"]' Required="true" Variant="Variant.Outlined" />
                </MudItem>
                <MudItem xs="6">
                    <MudTextField @bind-Value="_city" Label='@L["CreateResidenceDialog_City"]' Required="true" Variant="Variant.Outlined" />
                </MudItem>
                <MudItem xs="4">
                    <MudTextField @bind-Value="_state" Label='@L["CreateResidenceDialog_State"]' Variant="Variant.Outlined" />
                </MudItem>
                <MudItem xs="4">
                    <MudTextField @bind-Value="_country" Label='@L["CreateResidenceDialog_Country"]' Variant="Variant.Outlined" />
                </MudItem>
                <MudItem xs="4">
                    <MudTextField @bind-Value="_zipCode" Label='@L["CreateResidenceDialog_ZipCode"]' Variant="Variant.Outlined" />
                </MudItem>

	                <MudItem xs="12">
	                    <MudNumericField @bind-Value="_maxRoomsCount" Label="Max Rooms Count" Min="1"
	                        Required="true" Variant="Variant.Outlined" />
	                </MudItem>

                <MudItem xs="12">
                    <MudText Typo="Typo.subtitle2" Class="mb-2">@L["CreateResidenceDialog_Facilities"]</MudText>
                    <MudStack Row="true" Wrap="Wrap.Wrap">
                        <MudCheckBox @bind-Value="@_residence.HasWifi" Label='@L["CreateResidenceDialog_Facility_WiFi"]' Color="Color.Primary" />
                        <MudCheckBox @bind-Value="@_residence.HasParking" Label='@L["CreateResidenceDialog_Facility_Parking"]' Color="Color.Primary" />
                        <MudCheckBox @bind-Value="@_residence.HasLaundry" Label='@L["CreateResidenceDialog_Facility_Laundry"]' Color="Color.Primary" />
                        <MudCheckBox @bind-Value="@_residence.HasGym" Label='@L["CreateResidenceDialog_Facility_Gym"]' Color="Color.Primary" />
                        <MudCheckBox @bind-Value="@_residence.HasSwimmingPool" Label='@L["CreateResidenceDialog_Facility_Pool"]' Color="Color.Primary" />
                        <MudCheckBox @bind-Value="@_residence.HasSecurity" Label='@L["CreateResidenceDialog_Facility_Security"]' Color="Color.Primary" />
                        <MudCheckBox @bind-Value="@_residence.HasKitchen" Label='@L["CreateResidenceDialog_Facility_Kitchen"]' Color="Color.Primary" />
                        <MudCheckBox @bind-Value="@_residence.HasStudyRoom" Label='@L["CreateResidenceDialog_Facility_StudyRoom"]' Color="Color.Primary" />
                    </MudStack>
                </MudItem>
            </MudGrid>
        </MudForm>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">@L["CreateResidenceDialog_Button_Cancel"]</MudButton>
        <MudButton Color="Color.Primary" OnClick="Submit" Disabled="@(!_success)">@L["CreateResidenceDialog_Button_Create"]</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] IMudDialogInstance MudDialog { get; set; }

    private MudForm _form;
    private bool _success;
    private Residence _residence = new();

    // Address fields
    private string _street = "";
    private string _city = "";
    private string _state = "";
    private string _country = "";
    private string _zipCode = "";
    private string _description = "";
    private int _maxRoomsCount = 0;



    private void Cancel() => MudDialog.Cancel();

    private async Task Submit()
    {
        await _form.Validate();
        if (_form.IsValid)
        {
            try
            {
                // Create Value Objects
	                var address = Address.Create(_street, _city, _state, _country, _zipCode);
	
	                _residence.Id = Guid.NewGuid();
	                _residence.Address = address;
	                _residence.Description = _description;
	                _residence.MaxRoomsCount = _maxRoomsCount;
                // Initialize capacities based on MaxRoomsCount
                _residence.TotalCapacity = _residence.MaxRoomsCount;
                _residence.AvailableCapacity = _residence.MaxRoomsCount;
                _residence.CurrentRoomsCount = 0;

                using var scope = ScopeFactory.CreateScope();
                var repo = scope.ServiceProvider.GetRequiredService<IRepositories<Residence>>();

                await repo.CreateAsync(_residence);
                MudDialog.Close(DialogResult.Ok(true));
            }
            catch (Exception ex)
            {
                Snackbar.Add(string.Format(L["CreateResidenceDialog_Snackbar_Error"], ex.Message), Severity.Error);
            }
        }
    }
}

