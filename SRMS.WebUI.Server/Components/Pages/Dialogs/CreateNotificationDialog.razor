@using SRMS.Application.Notifications.DTOs
@using SRMS.Domain.Notifications.Enums
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<Resource> L

<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Filled.AddAlert" Class="mr-2" />
            @L["CreateNotificationDialog_Title"]
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudForm @ref="_form" @bind-IsValid="@_success">
            <MudTextField T="string" Label='@L["CreateNotificationDialog_Label_Title"]' Required="true" @bind-Value="_model.Title" />
            <MudTextField T="string" Label='@L["CreateNotificationDialog_Label_Message"]' Required="true" Lines="3" @bind-Value="_model.Message" />

            <MudSelect T="string" Label='@L["CreateNotificationDialog_Label_TargetAudience"]' @bind-Value="SelectedAudience" Required="true">
                @foreach (var audience in _availableAudiences)
                {
                    <MudSelectItem Value="@audience.Value">@audience.Key</MudSelectItem>
                }
            </MudSelect>

            <MudSelect T="NotificationPriority" Label='@L["CreateNotificationDialog_Label_Priority"]' @bind-Value="_model.Priority">
                <MudSelectItem Value="NotificationPriority.Low">@L["CreateNotificationDialog_Priority_Low"]</MudSelectItem>
                <MudSelectItem Value="NotificationPriority.Normal">@L["CreateNotificationDialog_Priority_Normal"]</MudSelectItem>
                <MudSelectItem Value="NotificationPriority.High">@L["CreateNotificationDialog_Priority_High"]</MudSelectItem>
                <MudSelectItem Value="NotificationPriority.Urgent">@L["CreateNotificationDialog_Priority_Urgent"]</MudSelectItem>
            </MudSelect>

            <MudSelect T="NotificationType" Label='@L["CreateNotificationDialog_Label_Type"]' @bind-Value="_model.Type">
                <MudSelectItem Value="NotificationType.Info">@L["CreateNotificationDialog_Type_Info"]</MudSelectItem>
                <MudSelectItem Value="NotificationType.Announcement">@L["CreateNotificationDialog_Type_Announcement"]</MudSelectItem>
                <MudSelectItem Value="NotificationType.Warning">@L["CreateNotificationDialog_Type_Warning"]</MudSelectItem>
                <MudSelectItem Value="NotificationType.System">@L["CreateNotificationDialog_Type_System"]</MudSelectItem>
            </MudSelect>
        </MudForm>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="@Cancel">@L["CreateNotificationDialog_Button_Cancel"]</MudButton>
        <MudButton Color="Color.Primary" Variant="Variant.Filled" OnClick="@Submit" Disabled="@(!_success)">@L["CreateNotificationDialog_Button_Send"]
        </MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] IMudDialogInstance MudDialog { get; set; } = null!;
    [Parameter] public string? CurrentUserRole { get; set; }

    private MudForm? _form;
    private bool _success;
    private readonly CreateNotificationDto _model = new() { Priority = NotificationPriority.Normal, Type = NotificationType.Info };
    private string? SelectedAudience { get; set; }

    private readonly Dictionary<string, string> _availableAudiences = new();

    protected override void OnInitialized()
    {
        if (CurrentUserRole == Roles.SuperRoot)
        {
            _availableAudiences.Add(L["CreateNotificationDialog_Audience_All"], "All");
            _availableAudiences.Add(L["CreateNotificationDialog_Audience_Admins"], Roles.Admin);
            _availableAudiences.Add(L["CreateNotificationDialog_Audience_Managers"], Roles.Manager);
            _availableAudiences.Add(L["CreateNotificationDialog_Audience_Students"], Roles.Student);
        }
        else if (CurrentUserRole == Roles.Admin)
        {
            _availableAudiences.Add(L["CreateNotificationDialog_Audience_Managers"], Roles.Manager);
            _availableAudiences.Add(L["CreateNotificationDialog_Audience_Students"], Roles.Student);
        }
        else if (CurrentUserRole == Roles.Manager)
        {
            _availableAudiences.Add(L["CreateNotificationDialog_Audience_Students"], Roles.Student);
        }
    }

    private void Cancel() => MudDialog.Cancel();

    private void Submit()
    {
        MudDialog.Close(DialogResult.Ok(new { Notification = _model, Audience = SelectedAudience }));
    }
}
