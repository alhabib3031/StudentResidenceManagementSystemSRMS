@page "/about"
@* @attribute [Authorize] *@
@rendermode InteractiveServer

<PageTitle>About Us - SRMS</PageTitle>

<MudPaper class="animate-fade-in pa-6">
    <!-- Hero Section -->
    <MudStack Class="text-center mb-8 animate-float glass-card">
        <MudText Typo="Typo.h2" Class="text-gradient mb-3" Style="font-weight: 800;">
            About SRMS
        </MudText>
        <MudText Typo="Typo.h6" Color="Color.Secondary" Style="max-width: 800px; margin: 0 auto;">
            Revolutionizing student residence management with cutting-edge technology and exceptional service
        </MudText>
    </MudStack>

    <!-- Mission & Vision -->
    <MudGrid Class="mb-6">
        <MudItem xs="12" md="6">
            <MudPaper Class="glass-card pa-6 h-100">
                <div class="text-center mb-4">
                    <MudIcon Icon="@Icons.Material.Filled.Visibility" Color="Color.Primary" Size="Size.Large"
                        Style="font-size: 60px;" />
                </div>
                <MudText Typo="Typo.h5" Class="text-center mb-3" Style="font-weight: 700;">Our Vision</MudText>
                <MudText Typo="Typo.body1" Color="Color.Secondary" Align="Align.Center">
                    To be the leading platform for student residence management, providing seamless experiences
                    for students, managers, and administrators worldwide through innovative technology and
                    exceptional service delivery.
                </MudText>
            </MudPaper>
        </MudItem>
        <MudItem xs="12" md="6">
            <MudPaper Class="glass-card pa-6 h-100">
                <div class="text-center mb-4">
                    <MudIcon Icon="@Icons.Material.Filled.Flag" Color="Color.Success" Size="Size.Large"
                        Style="font-size: 60px;" />
                </div>
                <MudText Typo="Typo.h5" Class="text-center mb-3" Style="font-weight: 700;">Our Mission</MudText>
                <MudText Typo="Typo.body1" Color="Color.Secondary" Align="Align.Center">
                    To simplify and enhance the student housing experience by providing a comprehensive,
                    user-friendly platform that connects students with quality accommodation while empowering
                    administrators with powerful management tools.
                </MudText>
            </MudPaper>
        </MudItem>
    </MudGrid>

    <!-- Features -->
    <MudText Typo="Typo.h4" Class="text-center mb-6" Style="font-weight: 700;">Why Choose SRMS?</MudText>
    <MudGrid Class="mb-6">
        <MudItem xs="12" sm="6" md="4">
            <MudPaper Class="modern-card hover-lift pa-5 text-center h-100">
                <MudIcon Icon="@Icons.Material.Filled.Speed" Color="Color.Primary" Size="Size.Large" Class="mb-3" />
                <MudText Typo="Typo.h6" Class="mb-2">Fast & Efficient</MudText>
                <MudText Typo="Typo.body2" Color="Color.Secondary">
                    Streamlined processes that save time and reduce administrative overhead
                </MudText>
            </MudPaper>
        </MudItem>
        <MudItem xs="12" sm="6" md="4">
            <MudPaper Class="modern-card hover-lift pa-5 text-center h-100">
                <MudIcon Icon="@Icons.Material.Filled.Security" Color="Color.Success" Size="Size.Large" Class="mb-3" />
                <MudText Typo="Typo.h6" Class="mb-2">Secure & Reliable</MudText>
                <MudText Typo="Typo.body2" Color="Color.Secondary">
                    Enterprise-grade security to protect your data and privacy
                </MudText>
            </MudPaper>
        </MudItem>
        <MudItem xs="12" sm="6" md="4">
            <MudPaper Class="modern-card hover-lift pa-5 text-center h-100">
                <MudIcon Icon="@Icons.Material.Filled.Devices" Color="Color.Info" Size="Size.Large" Class="mb-3" />
                <MudText Typo="Typo.h6" Class="mb-2">Multi-Platform</MudText>
                <MudText Typo="Typo.body2" Color="Color.Secondary">
                    Access from any device - desktop, tablet, or mobile
                </MudText>
            </MudPaper>
        </MudItem>
        <MudItem xs="12" sm="6" md="4">
            <MudPaper Class="modern-card hover-lift pa-5 text-center h-100">
                <MudIcon Icon="@Icons.Material.Filled.Support" Color="Color.Warning" Size="Size.Large" Class="mb-3" />
                <MudText Typo="Typo.h6" Class="mb-2">24/7 Support</MudText>
                <MudText Typo="Typo.body2" Color="Color.Secondary">
                    Round-the-clock customer support to assist you anytime
                </MudText>
            </MudPaper>
        </MudItem>
        <MudItem xs="12" sm="6" md="4">
            <MudPaper Class="modern-card hover-lift pa-5 text-center h-100">
                <MudIcon Icon="@Icons.Material.Filled.Analytics" Color="Color.Error" Size="Size.Large" Class="mb-3" />
                <MudText Typo="Typo.h6" Class="mb-2">Advanced Analytics</MudText>
                <MudText Typo="Typo.body2" Color="Color.Secondary">
                    Powerful insights and reporting for better decision making
                </MudText>
            </MudPaper>
        </MudItem>
        <MudItem xs="12" sm="6" md="4">
            <MudPaper Class="modern-card hover-lift pa-5 text-center h-100">
                <MudIcon Icon="@Icons.Material.Filled.CloudDone" Color="Color.Secondary" Size="Size.Large"
                    Class="mb-3" />
                <MudText Typo="Typo.h6" Class="mb-2">Cloud-Based</MudText>
                <MudText Typo="Typo.body2" Color="Color.Secondary">
                    Scalable cloud infrastructure for optimal performance
                </MudText>
            </MudPaper>
        </MudItem>
    </MudGrid>

    <!-- Statistics -->
    <MudPaper Class="glass-card pa-6 mb-6">
        <MudText Typo="Typo.h4" Class="text-center mb-6" Style="font-weight: 700;">Our Impact</MudText>
        <MudGrid>
            <MudItem xs="6" md="3" Class="text-center">
                <MudText Typo="Typo.h3" Class="text-gradient" Style="font-weight: 800;">10K+</MudText>
                <MudText Typo="Typo.body1" Color="Color.Secondary">Active Students</MudText>
            </MudItem>
            <MudItem xs="6" md="3" Class="text-center">
                <MudText Typo="Typo.h3" Class="text-gradient" Style="font-weight: 800;">50+</MudText>
                <MudText Typo="Typo.body1" Color="Color.Secondary">Residences</MudText>
            </MudItem>
            <MudItem xs="6" md="3" Class="text-center">
                <MudText Typo="Typo.h3" Class="text-gradient" Style="font-weight: 800;">99.9%</MudText>
                <MudText Typo="Typo.body1" Color="Color.Secondary">Uptime</MudText>
            </MudItem>
            <MudItem xs="6" md="3" Class="text-center">
                <MudText Typo="Typo.h3" Class="text-gradient" Style="font-weight: 800;">4.8/5</MudText>
                <MudText Typo="Typo.body1" Color="Color.Secondary">User Rating</MudText>
            </MudItem>
        </MudGrid>
    </MudPaper>

    <!-- Team Section -->
    <MudText Typo="Typo.h4" Class="text-center mb-6" Style="font-weight: 700;">Meet Our Team</MudText>
    <MudGrid Class="mb-6">
        @foreach (var member in _teamMembers)
        {
            <MudItem xs="12" sm="6" md="3">
                <MudPaper Class="modern-card hover-lift pa-4 text-center">
                    <MudAvatar Size="Size.Large" Style="width: 100px; height: 100px; margin: 0 auto;" Class="mb-3">
                        <MudIcon Icon="@Icons.Material.Filled.Person" Size="Size.Large" />
                    </MudAvatar>
                    <MudText Typo="Typo.h6" Style="font-weight: 600;">@member.Name</MudText>
                    <MudText Typo="Typo.body2" Color="Color.Primary" Class="mb-2">@member.Role</MudText>
                    <MudText Typo="Typo.caption" Color="Color.Secondary">@member.Description</MudText>
                </MudPaper>
            </MudItem>
        }
    </MudGrid>

    <!-- Call to Action -->
    <MudPaper Class="glass-card pa-8 text-center">
        <MudText Typo="Typo.h4" Class="mb-3" Style="font-weight: 700;">Ready to Get Started?</MudText>
        <MudText Typo="Typo.body1" Color="Color.Secondary" Class="mb-4">
            Join thousands of students and administrators who trust SRMS for their housing needs
        </MudText>
        <MudStack Row="true" Justify="Justify.Center" Spacing="3">
            <MudButton Variant="Variant.Filled" Color="Color.Primary" Size="Size.Large" Href="/register"
                StartIcon="@Icons.Material.Filled.PersonAdd" Class="btn-modern btn-primary">
                Sign Up Now
            </MudButton>
            <MudButton Variant="Variant.Outlined" Color="Color.Primary" Size="Size.Large" Href="/contact"
                StartIcon="@Icons.Material.Filled.ContactMail">
                Contact Us
            </MudButton>
        </MudStack>
    </MudPaper>
</MudPaper>

