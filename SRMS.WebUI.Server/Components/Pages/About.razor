@page "/about"
@using Microsoft.Extensions.Localization
@using SRMS.WebUI.Server.Resources
@inject IStringLocalizer<Resource> L
@* @attribute [Authorize] *@
@rendermode InteractiveServer

<PageTitle>@L["About_PageTitle"]</PageTitle>

<MudPaper class="animate-fade-in pa-6">
    <!-- Hero Section -->
    <MudStack Class="text-center mb-8 animate-float glass-card">
        <MudText Typo="Typo.h2" Class="text-gradient mb-3" Style="font-weight: 800;">
            @L["About_Header"]
        </MudText>
        <MudText Typo="Typo.h6" Color="Color.Secondary" Style="max-width: 800px; margin: 0 auto;">
            @L["About_Subtitle"]
        </MudText>
    </MudStack>

    <!-- Mission & Vision -->
    <MudGrid Class="mb-6">
        <MudItem xs="12" md="6">
            <MudPaper Class="glass-card pa-6 h-100">
                <div class="text-center mb-4">
                    <MudIcon Icon="@Icons.Material.Filled.Visibility" Color="Color.Primary" Size="Size.Large"
                        Style="font-size: 60px;" />
                </div>
                <MudText Typo="Typo.h5" Class="text-center mb-3" Style="font-weight: 700;">@L["About_Vision_Title"]</MudText>
                <MudText Typo="Typo.body1" Color="Color.Secondary" Align="Align.Center">
                    @L["About_Vision_Description"]
                </MudText>
            </MudPaper>
        </MudItem>
        <MudItem xs="12" md="6">
            <MudPaper Class="glass-card pa-6 h-100">
                <div class="text-center mb-4">
                    <MudIcon Icon="@Icons.Material.Filled.Flag" Color="Color.Success" Size="Size.Large"
                        Style="font-size: 60px;" />
                </div>
                <MudText Typo="Typo.h5" Class="text-center mb-3" Style="font-weight: 700;">@L["About_Mission_Title"]</MudText>
                <MudText Typo="Typo.body1" Color="Color.Secondary" Align="Align.Center">
                    @L["About_Mission_Description"]
                </MudText>
            </MudPaper>
        </MudItem>
    </MudGrid>

    <!-- Features -->
    <MudText Typo="Typo.h4" Class="text-center mb-6" Style="font-weight: 700;">@L["About_WhyChooseSRMS_Title"]</MudText>
    <MudGrid Class="mb-6">
        <MudItem xs="12" sm="6" md="4">
            <MudPaper Class="modern-card hover-lift pa-5 text-center h-100">
                <MudIcon Icon="@Icons.Material.Filled.Speed" Color="Color.Primary" Size="Size.Large" Class="mb-3" />
                <MudText Typo="Typo.h6" Class="mb-2">@L["About_Feature_FastEfficient_Title"]</MudText>
                <MudText Typo="Typo.body2" Color="Color.Secondary">
                    @L["About_Feature_FastEfficient_Description"]
                </MudText>
            </MudPaper>
        </MudItem>
        <MudItem xs="12" sm="6" md="4">
            <MudPaper Class="modern-card hover-lift pa-5 text-center h-100">
                <MudIcon Icon="@Icons.Material.Filled.Security" Color="Color.Success" Size="Size.Large" Class="mb-3" />
                <MudText Typo="Typo.h6" Class="mb-2">@L["Feature_Security_Title"]</MudText>
                <MudText Typo="Typo.body2" Color="Color.Secondary">
                    @L["Feature_Security_Desc"]
                </MudText>
            </MudPaper>
        </MudItem>
        <MudItem xs="12" sm="6" md="4">
            <MudPaper Class="modern-card hover-lift pa-5 text-center h-100">
                <MudIcon Icon="@Icons.Material.Filled.Devices" Color="Color.Info" Size="Size.Large" Class="mb-3" />
                <MudText Typo="Typo.h6" Class="mb-2">@L["About_Feature_MultiPlatform_Title"]</MudText>
                <MudText Typo="Typo.body2" Color="Color.Secondary">
                    @L["About_Feature_MultiPlatform_Description"]
                </MudText>
            </MudPaper>
        </MudItem>
        <MudItem xs="12" sm="6" md="4">
            <MudPaper Class="modern-card hover-lift pa-5 text-center h-100">
                <MudIcon Icon="@Icons.Material.Filled.Support" Color="Color.Warning" Size="Size.Large" Class="mb-3" />
                <MudText Typo="Typo.h6" Class="mb-2">@L["About_Feature_247Support_Title"]</MudText>
                <MudText Typo="Typo.body2" Color="Color.Secondary">
                    @L["About_Feature_247Support_Description"]
                </MudText>
            </MudPaper>
        </MudItem>
        <MudItem xs="12" sm="6" md="4">
            <MudPaper Class="modern-card hover-lift pa-5 text-center h-100">
                <MudIcon Icon="@Icons.Material.Filled.Analytics" Color="Color.Error" Size="Size.Large" Class="mb-3" />
                <MudText Typo="Typo.h6" Class="mb-2">@L["Feature_Analytics_Title"]</MudText>
                <MudText Typo="Typo.body2" Color="Color.Secondary">
                    @L["Feature_Analytics_Desc"]
                </MudText>
            </MudPaper>
        </MudItem>
        <MudItem xs="12" sm="6" md="4">
            <MudPaper Class="modern-card hover-lift pa-5 text-center h-100">
                <MudIcon Icon="@Icons.Material.Filled.CloudDone" Color="Color.Secondary" Size="Size.Large"
                    Class="mb-3" />
                <MudText Typo="Typo.h6" Class="mb-2">@L["About_Feature_CloudBased_Title"]</MudText>
                <MudText Typo="Typo.body2" Color="Color.Secondary">
                    @L["About_Feature_CloudBased_Description"]
                </MudText>
            </MudPaper>
        </MudItem>
    </MudGrid>

    <!-- Statistics -->
    <MudPaper Class="glass-card pa-6 mb-6">
        <MudText Typo="Typo.h4" Class="text-center mb-6" Style="font-weight: 700;">@L["About_Impact_Title"]</MudText>
        <MudGrid>
            <MudItem xs="6" md="3" Class="text-center">
                <MudText Typo="Typo.h3" Class="text-gradient" Style="font-weight: 800;">10K+</MudText>
                <MudText Typo="Typo.body1" Color="Color.Secondary">@L["Stats_ActiveStudents"]</MudText>
            </MudItem>
            <MudItem xs="6" md="3" Class="text-center">
                <MudText Typo="Typo.h3" Class="text-gradient" Style="font-weight: 800;">50+</MudText>
                <MudText Typo="Typo.body1" Color="Color.Secondary">@L["Stats_Residences"]</MudText>
            </MudItem>
            <MudItem xs="6" md="3" Class="text-center">
                <MudText Typo="Typo.h3" Class="text-gradient" Style="font-weight: 800;">99.9%</MudText>
                <MudText Typo="Typo.body1" Color="Color.Secondary">@L["Stats_Uptime"]</MudText>
            </MudItem>
            <MudItem xs="6" md="3" Class="text-center">
                <MudText Typo="Typo.h3" Class="text-gradient" Style="font-weight: 800;">4.8/5</MudText>
                <MudText Typo="Typo.body1" Color="Color.Secondary">@L["About_Impact_UserRating"]</MudText>
            </MudItem>
        </MudGrid>
    </MudPaper>

    <!-- Team Section -->
    <MudText Typo="Typo.h4" Class="text-center mb-6" Style="font-weight: 700;">@L["About_Team_Title"]</MudText>
    <MudGrid Class="mb-6">
        @foreach (var member in _teamMembers)
        {
            <MudItem xs="12" sm="6" md="3">
                <MudPaper Class="modern-card hover-lift pa-4 text-center">
                    <MudAvatar Size="Size.Large" Style="width: 100px; height: 100px; margin: 0 auto;" Class="mb-3">
                        <MudIcon Icon="@Icons.Material.Filled.Person" Size="Size.Large" />
                    </MudAvatar>
                    <MudText Typo="Typo.h6" Style="font-weight: 600;">@member.Name</MudText>
                    <MudText Typo="Typo.body2" Color="Color.Primary" Class="mb-2">@member.Role</MudText>
                    <MudText Typo="Typo.caption" Color="Color.Secondary">@member.Description</MudText>
                </MudPaper>
            </MudItem>
        }
    </MudGrid>

    <!-- Call to Action -->
    <MudPaper Class="glass-card pa-8 text-center">
        <MudText Typo="Typo.h4" Class="mb-3" Style="font-weight: 700;">@L["CTA_Header"]</MudText>
        <MudText Typo="Typo.body1" Color="Color.Secondary" Class="mb-4">
            @L["CTA_Body"]
        </MudText>
        <MudStack Row="true" Justify="Justify.Center" Spacing="3">
            <MudButton Variant="Variant.Filled" Color="Color.Primary" Size="Size.Large" Href="/register"
                StartIcon="@Icons.Material.Filled.PersonAdd" Class="btn-modern btn-primary">
                @L["SignUpNow"]
            </MudButton>
            <MudButton Variant="Variant.Outlined" Color="Color.Primary" Size="Size.Large" Href="/contact"
                StartIcon="@Icons.Material.Filled.ContactMail">
                @L["ContactUs"]
            </MudButton>
        </MudStack>
    </MudPaper>
</MudPaper>

@code {
    private List<TeamMember> _teamMembers = new();

    protected override void OnInitialized()
    {
        _teamMembers = new List<TeamMember>
        {
            new TeamMember
            {
                Name = L["About_Team_Member1_Name"],
                Role = L["About_Team_Member1_Role"],
                Description = L["About_Team_Member1_Description"]
            },
            new TeamMember
            {
                Name = L["About_Team_Member2_Name"],
                Role = L["About_Team_Member2_Role"],
                Description = L["About_Team_Member2_Description"]
            },
            new TeamMember
            {
                Name = L["About_Team_Member3_Name"],
                Role = L["About_Team_Member3_Role"],
                Description = L["About_Team_Member3_Description"]
            },
            new TeamMember
            {
                Name = L["About_Team_Member4_Name"],
                Role = L["About_Team_Member4_Role"],
                Description = L["About_Team_Member4_Description"]
            }
        };
    }

    private class TeamMember
    {
        public string Name { get; set; } = string.Empty;
        public string Role { get; set; } = string.Empty;
        public string Description { get; set; } = string.Empty;
    }
}
