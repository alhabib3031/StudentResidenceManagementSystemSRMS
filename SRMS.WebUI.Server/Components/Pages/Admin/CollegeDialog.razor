@using SRMS.Application.Colleges
@using SRMS.Domain.Colleges
@using SRMS.Domain.Colleges.Enums
@using Microsoft.Extensions.Localization
@inject ICollegeService CollegeService
@inject ISnackbar Snackbar
@inject IStringLocalizer<Resource> L

<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6" Class="font-bold">
            <MudIcon Icon="@(Model.Id == Guid.Empty ? Icons.Material.Filled.Add : Icons.Material.Filled.Edit)"
                Class="mr-2 mb-n1" />
            @L[Model.Id == Guid.Empty ? "AddCollege" : "EditCollege"]
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudStack Spacing="4" Class="mt-2">
            <MudTextField @bind-Value="Model.Name" Label='@L["Name"]' Variant="Variant.Outlined" Required="true" />
            <MudSelect T="StudySystem" @bind-Value="Model.StudySystem" Label='@L["StudySystem"]'
                Variant="Variant.Outlined">
                @foreach (StudySystem system in Enum.GetValues(typeof(StudySystem)))
                {
                    <MudSelectItem Value="@system">@system.ToString()</MudSelectItem>
                }
            </MudSelect>
        </MudStack>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="@Cancel" Class="rounded-xl px-4">@L["Cancel"]</MudButton>
        <MudButton Color="Color.Primary" Variant="Variant.Filled" OnClick="@Submit" Class="rounded-xl px-8 shadow-md"
            Disabled="_processing">
            @if (_processing)
            {
                <MudProgressCircular Size="Size.Small" Indeterminate="true" Class="mr-2" />
            }
            @L["Save"]
        </MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] IMudDialogInstance MudDialog { get; set; } = null!;
    [Parameter] public College Model { get; set; } = new();

    private bool _processing;

    private async Task Submit()
    {
        if (string.IsNullOrWhiteSpace(Model.Name))
        {
            Snackbar.Add("Name is required.", Severity.Warning);
            return;
        }

        _processing = true;
        bool success;

        if (Model.Id == Guid.Empty)
        {
            Model.Id = Guid.NewGuid();
            success = await CollegeService.CreateCollegeAsync(Model);
        }
        else
        {
            success = await CollegeService.UpdateCollegeAsync(Model);
        }

        if (success)
        {
            Snackbar.Add("College saved successfully.", Severity.Success);
            MudDialog.Close(DialogResult.Ok(true));
        }
        else
        {
            Snackbar.Add("Failed to save college.", Severity.Error);
        }
        _processing = false;
    }

    private void Cancel() => MudDialog.Cancel();
}
