@page "/admin/rooms"
@attribute [Authorize(Roles = "Admin")]
@using SRMS.Application.SystemSettings.DTOs
@inject HttpClient Http
@inject IJSRuntime JsRuntime

<h3>Admin Room Management</h3>

<p>
    <a href="/admin/rooms/create">Create New Room</a>
</p>

@if (_rooms == null)
{
    <p><em>Loading rooms...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Room Number</th>
                <th>Floor</th>
                <th>Type</th>
                <th>Monthly Rent</th>
                <th>Total Beds</th>
                <th>Occupied Beds</th>
                <th>Status</th>
                <th>Residence</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var room in _rooms)
            {
                <tr>
                    <td>@room.RoomNumber</td>
                    <td>@room.Floor</td>
                    <td>@room.RoomType</td>
                    <td>@room.MonthlyRentAmount @room.MonthlyRentCurrency</td>
                    <td>@room.TotalBeds</td>
                    <td>@room.OccupiedBeds</td>
                    <td>@room.Status</td>
                    <td>@room.ResidenceName</td>
                    <td>
                        <a href="/admin/rooms/edit/@room.Id">Edit</a> |
                        <button @onclick="(() => DeleteRoom(room.Id))" class="btn btn-danger btn-sm">Delete</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

<h3>Fees Configurations</h3>

<p>
    <a href="/admin/fees-configurations/create">Create New Fees Configuration</a>
</p>

@if (_feesConfigurations == null)
{
    <p><em>Loading fees configurations...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Nationality</th>
                <th>Study Level</th>
                <th>Is Monthly</th>
                <th>Fee Amount</th>
                <th>Description</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var fee in _feesConfigurations)
            {
                <tr>
                    <td>@fee.NationalityName</td>
                    <td>@fee.StudyLevelName</td>
                    <td>@(fee.IsMonthly ? "Yes" : "No")</td>
                    <td>@fee.FeeAmount.Amount @fee.FeeAmount.Currency</td>
                    <td>@fee.Description</td>
                    <td>
                        <a href="/admin/fees-configurations/edit/@fee.Id">Edit</a> |
                        <button @onclick="(() => DeleteFeesConfiguration(fee.Id))" class="btn btn-danger btn-sm">Delete</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private IEnumerable<RoomDto>? _rooms;
    private IEnumerable<FeesConfigurationDto>? _feesConfigurations;

    protected override async Task OnInitializedAsync()
    {
        await LoadRooms();
        await LoadFeesConfigurations();
    }

    private async Task LoadRooms()
    {
        _rooms = await Http.GetFromJsonAsync<IEnumerable<RoomDto>>("api/admin/AdminRooms");
    }

    private async Task DeleteRoom(Guid id)
    {
        var confirmed = await JsRuntime.InvokeAsync<bool>("confirm", "Are you sure you want to delete this room?");
        if (confirmed)
        {
            var response = await Http.DeleteAsync($"api/admin/AdminRooms/{id}");
            if (response.IsSuccessStatusCode)
            {
                await LoadRooms();
            }
            else
            {
                // Handle error
                Console.WriteLine($"Error deleting room: {response.ReasonPhrase}");
            }
        }
    }

    private async Task LoadFeesConfigurations()
    {
        _feesConfigurations = await Http.GetFromJsonAsync<IEnumerable<FeesConfigurationDto>>("api/admin/AdminRooms/fees-configurations");
    }

    private async Task DeleteFeesConfiguration(Guid id)
    {
        var confirmed = await JsRuntime.InvokeAsync<bool>("confirm", "Are you sure you want to delete this fees configuration?");
        if (confirmed)
        {
            var response = await Http.DeleteAsync($"api/admin/AdminRooms/fees-configurations/{id}");
            if (response.IsSuccessStatusCode)
            {
                await LoadFeesConfigurations();
            }
            else
            {
                // Handle error
                Console.WriteLine($"Error deleting fees configuration: {response.ReasonPhrase}");
            }
        }
    }
}
